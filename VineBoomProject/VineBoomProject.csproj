<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>risingEmoji.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Images\hqdefault.jpg" />
    <None Remove="Resources\Sounds\Vine Boom Sound Effect.wav" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="risingEmoji.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\hqdefault.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Sounds\Vine Boom Sound Effect.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
